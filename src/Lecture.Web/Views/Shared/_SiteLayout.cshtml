<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/site_css")
    @RenderSection("Styles", required: false)
    @Scripts.Render("~/bundles/site_js")
    @RenderSection("Scripts", required: false)
  </head>
  <body>
    <div class="navbar navbar-static-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <div class="nav-collapse">
            <ul class="nav">
              <li>@Html.ActionLink("Home", "Index", "Home", new {area = ""}, new {})</li>
              <li>@Html.ActionLink("Users", "Index", "Users", new {area = "Admin"}, new {})</li>
            </ul>
            <ul class="nav pull-right"><li>@(Request.IsAuthenticated ? Html.RouteLink("Sign Out", "SignOut") : Html.RouteLink("Sign In", "SignIn"))</li></ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container" style="margin-top: 20px;">
      @RenderBody()
    </div>
    <div id="ajax-form-modal-container"></div>
  </body>
</html>